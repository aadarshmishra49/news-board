<div style="border:2px solid #DEECEB;padding:5px;margin:3px">
  <p><%= comment.content %></p>

  <p>Commented by <%= comment.user.email%> <%= time_ago_in_words(comment.created_at) %> ago </p>
  <%= render partial: 'reactions/button' , locals: {likeable: comment } %>

  <div class="d-flex justify-content-between align-items-center" style="margin-top: 10px;">
    <% if user_signed_in? %>
      <% if comment.user_id == current_user.id %>
        <div style="display: flex; flex-direction: row;">
          <%= link_to "Edit", edit_message_comment_path(comment.message,comment), class: "btn btn-info btn-equal me-2", style: "padding: 6px 12px; margin-right: 10px;" %>
          <%= button_to "Delete", message_comment_path(comment.message,comment), method: :delete, class: "btn btn-warning btn-equal", data: { confirm: "Are you sure you want to delete this message?" }, style: "padding: 6px 12px;" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
