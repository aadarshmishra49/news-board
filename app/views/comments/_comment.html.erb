<div style="border:2px solid #DEECEB;padding:2px;margin:3px">
<p><%= comment.content %></p>


<p>Commented by <%= comment.user.email%> <%= time_ago_in_words(comment.created_at) %> ago </p>
<%= render partial: 'reactions/button' , locals: {likeable: comment } %>



<div class="d-flex justify-content-between align-items-center">
<%= link_to "Back", root_path, class: "btn btn-secondary btn-equal" %>
<% if user_signed_in? %>
  <%if comment.user_id==current_user.id %>

  <div style="margin-left:-2100px"> <%= link_to "Edit", edit_message_comment_path(comment.message,comment), class: "btn btn-info btn-equal me-2" %></div>
   <div style="margin-left:-660px"> <%= button_to "Delete",  message_comment_path(comment.message,comment), method: :delete, class: "btn btn-warning btn-equal ", data: { confirm: "Are you sure you want to delete this message?" } %></div>
  <% end %>
<% end %>
</div>
</div>

    

