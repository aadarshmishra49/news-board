<div class="container grid" style="height: 500px; display: grid; grid-template-columns: 1fr 1fr;">
  <div class="grid" style="background-image: url('https://img.freepik.com/free-vector/news-concept-landing-page_52683-20647.jpg?size=626&ext=jpg&ga=GA1.2.1343488200.1681451629&semt=ais'); background-size: cover; background-position: top left; grid-column: 1/2; height: 100%;"></div>
  <div class="grid" style="grid-column: 2/3; height: 100%;">
    <div class="p-4" style="padding-left: 20px; height: 100%;">
      <div class="card" style="background-color:#66AACC; height: 100%;">
        <div class="card-header text-center" style="background-color:#ADD8E6;">
          <h2 class="text-primary" style="color: #CEACE6;">Log in</h2>
        </div>
        <div class="card-body" style="background-color:#ADD8E6">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control" } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control" } %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %>
                    Remember me
                  </label>
                </div>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.button :submit, "Log in", class: "btn btn-success btn-sm button" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
