
<div style="text-align:center">
  <h3><strong> Welcome on my news portal .... </strong></h3>
</div>      

<div class="container-fluid" >
  <div class="content">

      <% @messages.each do |message| %>
                
      <% if message.author.id ==current_author.id %>

        <div class="card text-white bg-secondary mb-3" style="max-width: 50rem;margin:auto;background-color:#7997b1!important">
        <div class="card-header" style="min-height: 7rem;"><h3><%=message.title %></h3></div>
        <div class="card-body">
        <button type="button" class="btn btn-success">
          <%= link_to "view Message", message_path(message), style: "color:white; text-decoration:none;" %>
        </button>
         </div>
      
        </div>
        <% end %>
      <% end %>

        

   </div>

</div>






